<div class="signup-container">
  <form action="/auth/signup" method="POST" id='signup-form' enctype="multipart/form-data">
    <h1>sign up now!</h1>

    <input type="text" name="username" placeholder="Your username" required>

    <input type="password" name="password" placeholder='Your password' required>

    <input type="test" name="firstname" placeholder='first name' required>

    <input type="lastname" name="lastname" placeholder='Your lastname' required>

    <label>Upload your profile picture:</label>
    <input type="file" name="userImage">

    <button type="submit" class='signup-button'>Create account</button>

  </form>
</div>